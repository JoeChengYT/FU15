#include <stdio.h>
#include <time.h>
 
int main()
{
    int head = 0;
    int tail = 0;
    
    srand(time(NULL));
    printf("Tossing a coin...\n");
    for(int i = 1; i <= 3; i++){
        printf("Round %d: ", i );
        if (rand()%2 == 0){
            printf("Heads\n");
            head++;
        }else{
            printf("Tails\n");
            tail++;
        }
    }
    printf("Heads: %d, Tails: %d\n", head, tail);
    return 0;
}
